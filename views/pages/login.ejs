<style>
  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  body {
    background: black;
  }

  .input-field input[type=date]:focus + label,
  .input-field input[type=text]:focus + label,
  .input-field input[type=email]:focus + label,
  .input-field input[type=password]:focus + label {
    color: #e91e63;
  }

  .input-field input[type=date]:focus,
  .input-field input[type=text]:focus,
  .input-field input[type=email]:focus,
  .input-field input[type=password]:focus {
    border-bottom: 2px solid #e91e63;
    box-shadow: none;
  }
</style>
</head>

<body>
<div class="section"></div>
<main>
  <center>

    <div class="section"></div>

    <h5 class="black-text">Login into your account</h5>
    <div class="section"></div>

    <div class="container">
      <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
<form class="col s12" action="/login" method="post">
  <div class='row'>
    <div class='col s12'>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s12'>
      <input class='validate' type='email' name='email' class='email' />
      <label for='email'>Enter your email</label>
    </div>
  </div>

  <div class='row'>
    <div class='input-field col s12'>
      <input class='validate' type='password' name='password' class='password' />
      <label for='password'>Enter your password</label>
    </div>

  </div>

  <br />
  <center>
    <div class='row'>
      <button type='submit' class='col s12 btn btn-large waves-effect black'>Login</button>
    </div>
  </center>
</form>
</div>
</div>
<a href="/register" white-text>Create account</a>
</center>

